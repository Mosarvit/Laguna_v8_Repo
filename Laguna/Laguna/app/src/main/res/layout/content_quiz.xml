<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mosarvit.laguna.QuizActivity"
    tools:showIn="@layout/activity_quiz">



    <Button
        android:id="@+id/btnTest"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Test"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_horizontal"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/linearLayout">


    <Button
        android:id="@+id/btnShortest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="in 5 min"
        android:layout_weight="1"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:background="#00FF00"
        />
        <!--app:layout_constraintLeft_toLeftOf="parent"-->
        <!--app:layout_constraintRight_toLeftOf="@+id/btnMiddle"-->



    <Button
        android:id="@+id/btnMiddle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="in 1 hour"
        android:layout_weight="1"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:background="#FFFF00"
        />


    <Button
        android:id="@+id/btnLongest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="in 1 day"
        android:layout_weight="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:background="#FF0000"
        />ntLeft_toRightof="@+id/btnMiddle"-->
        <!--app:layout_constraintRight_toRightof="parent"-->


        <Button
            android:id="@+id/btnShowAnswer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Show answer"
            android:layout_weight="0"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:background="#007bff"
            android:textColor="#eeeeeeee"
            android:visibility="visible"
            />



    </LinearLayout>


    <VideoView
        android:id="@+id/videoView"
        android:layout_width="382dp"
        android:layout_height="198dp"
        app:layout_constraintTop_toBottomOf="@+id/wbvQuestion"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintHorizontal_bias="1.0" />

    <WebView
        android:id="@+id/wbvQuestion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/videoView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">



    </WebView>

</android.support.constraint.ConstraintLayout>
